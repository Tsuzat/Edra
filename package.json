		"lowlight": "^3.3.0",
		"package-manager-detector": "^1.3.0",
		"svelte-tiptap": "^2.1.0",
		"sveltekit-rate-limiter": "^0.6.1",
		"tiptap-extension-auto-joiner": "^0.1.3",
		"tiptap-markdown": "^0.8.10"
	}
}
